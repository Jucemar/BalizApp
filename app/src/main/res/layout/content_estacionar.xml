<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.jucemar_dimon.balizapp.EstacionarActivity"
    tools:showIn="@layout/activity_estacionar">

    <ImageView
        android:id="@+id/indicador_dianteiro"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:duration="6000"
        android:src="@drawable/dianteiro_amarelo" />

    <TextView
        android:text="Carregando..."

        android:textAppearance="@android:style/TextAppearance.Medium"
        android:id="@+id/dados_sensor_dianteiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/carro"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:src="@drawable/carro" />

    <TextView

        android:text="Carregando..."
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:id="@+id/dados_sensor_traseiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/indicador_traseiro"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:duration="6000"
        android:src="@drawable/traseiro_verde" />

</LinearLayout>
